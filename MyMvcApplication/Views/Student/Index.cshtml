@model IEnumerable<MyMvcApplication.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Student Data</title>
</head>
<body>
    @{
        var grid = new WebGrid(Model, columnNames: null, defaultSort: "Id", rowsPerPage: 5, canPage: true, canSort: true, ajaxUpdateContainerId: "gridContent", ajaxUpdateCallback: "", fieldNamePrefix: "",
            pageFieldName: "", selectionFieldName: "selectedRow", sortFieldName: "", sortDirectionFieldName: "");
        grid.Pager(WebGridPagerModes.NextPrevious);
    }

    <div id="gridContent">
        @grid.GetHtml(tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
            selectedRowStyle: "select",
            columns: grid.Columns(
            grid.Column("Id", "Id"),
            grid.Column("Name", " Name")
              ));
    </div>
</body>
</html>
